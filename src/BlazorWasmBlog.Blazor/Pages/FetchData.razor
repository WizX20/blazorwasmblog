@page "/fetchdata"

@using BlazorWasmBlog.Modules.BlogComponents.Models

@inject HttpClient Http

<h1>Blog posts</h1>

<p>This component demonstrates fetching data from the server.</p>

@if (blogPosts == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <BlogPostsComponent BlogPosts="@blogPosts" />
}

@code {
    private List<BlogPostModel> blogPosts;

    protected override async Task OnInitializedAsync()
    {
        blogPosts = await Http.GetJsonAsync<List<BlogPostModel>>("sample-data/blogposts.json");
    }
}
